<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.MainActivity">

    <Button
        android:id="@+id/btn_open_first"
        style="@style/Button"
        android:text="@string/first_activity" />

    <Button
        android:id="@+id/btn_open_second"
        style="@style/Button"
        android:text="@string/second_activity" />

    <Button
        android:id="@+id/btn_open_third"
        style="@style/Button"
        android:text="@string/third_activity" />

    <Button
        android:id="@+id/btn_open_fourth"
        style="@style/Button"
        android:text="@string/fourth_activity" />

    <Button
        android:id="@+id/btn_open_fifth"
        style="@style/Button"
        android:text="@string/fifth_activity" />

    <Button
        android:id="@+id/btn_open_sixth"
        style="@style/Button"
        android:text="@string/sixth_activity" />

    <Button
        android:id="@+id/btn_open_seventh"
        style="@style/Button"
        android:text="@string/seventh_activity" />

</LinearLayout>
